<h2>Welcome to Pizza</h2>

<div class="row">

  <% @products.each do |p| %>
    <div class="col-md-3">
      <div>
        <%= p.title %>
      </div>
       <div>
         <img src="<%= p.path_to_image %>"height="200" width="200" />
      </div>
       <div>
        <%= p.description %>
      </div>
        <div>
        <%= p.size %> sm
      </div>
      <div>
        <%= p.price %> rub
      </div>
      <div>
        <button class="btn btn-sm btn-success" onclick="addToCart(<%= p.id %>)">Add to cart</button>
      </div>
      
    </div>
  <% end %>
</div>

